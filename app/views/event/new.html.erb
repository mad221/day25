<%= form_for @event, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <%= f.text_field :title %>
  <%= f.text_field :location %>
  <%= select_date Date.today, prefix: :start_date %>
  <%= f.text_field :duration %>
  <%= f.text_field :price %>
  <%= f.text_area :description, size: "60x12" %>
  <%= f.submit "Create" %>
<% end %>
