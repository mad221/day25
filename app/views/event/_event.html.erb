<% if event.validated == true %>
<div class="card mb-3 " style="width: 18rem;">
  <h3 class="card-header"><%= event.title %></h3>
  <% if event.avatar.attached? ==true %>
  <img class="w-100" display: block" <%= image_tag  event.avatar, alt: 'avatar' %>
  <% end %>
  <div class="card-body">
    <p class="card-text"><%= event.description %></p>
  </div>
  <div class="card-body">
    <a href="#" class="card-link"><a href="/event/<%= event.id %>">Voir l'évènement</a>
  </div>
</div>
<% end %>
