
  <table class="table">
    <thead>
      <tr>
        <th scope="col">@</th>
        <th scope="col">Prénom</th>
        <th scope="col">Nom</th>
        <th scope="col">Description</th>
        <th scope="col">Email</th>
      </tr>
    </thead>
    <% @user.each do |user| %>
    <tbody>
      <tr>
        <th scope="row"><%= user.id %></th>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.description %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Modifier", edit_admin_user_path(user.id) %></td>
        <td><a style="color: red;" href="<%= user_path(user.id)%>" data-confirm= "Êtes-vous sûr(e) de vouloir supprimer cet user ?" data-method="DELETE">Supprimer</a></td>
      </tr>
    </tbody>
    <% end %>
  </table>
